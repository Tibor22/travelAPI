generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}



model Country {
  id           Int      @id @default(autoincrement())
  updatedAt    DateTime @updatedAt
  capitolIATA  String   @unique
  name         String
  destinations Destinations[]
}

model Destinations {
  id          Int      @id @default(autoincrement())
  updatedAt   DateTime @updatedAt
  capitolIATA String   
  country     Country  @relation(fields: [countryId], references: [id])
  countryId   Int      @unique
  flights     Flights[]
}

model Flights {
  id             Int       @id @default(autoincrement())
  updatedAt      DateTime  @updatedAt
  airlines       String
  price          Int
  url            String
  destinations   Destinations @relation(fields: [destinationsId], references: [id])
  destinationsId Int       @unique
}